<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:id="@+id/procieline"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/procie"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="PROCESSOR" />

        <TextView
            android:id="@+id/procieprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE" />

        <Button
            android:id="@+id/prociego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@id/procieline"
        android:id="@+id/gpuline"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gpu"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="PROCESSOR" />

        <TextView
            android:id="@+id/gpuprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE" />

        <Button
            android:id="@+id/gpugo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose">
        </Button>

    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="TOTAL VALUE"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/totalvalue"
        android:layout_below="@id/gpuline"/>

</RelativeLayout>